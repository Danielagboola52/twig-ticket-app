            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <p>&copy; {{ current_year }} {{ app_name }}. All rights reserved.</p>
        </div>
    </footer>
</div>

<!-- Load scripts in correct order -->
<script src="/public/js/toast.js"></script>
<script src="/public/js/auth.js"></script>
<script src="/public/js/dashboard.js"></script>
{% endblock %}